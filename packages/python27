#!/usr/bin/env bash

BINTYP="default"
BINURL="https://www.python.org/ftp/python/2.7.12/python-2.7.12.msi"
O_FILE="python-2.7.12.msi"
MD5="fe0ef5b8fd02722f32f7284324934f9d"
declare -a DEPEND=("msiexec")


function check_install {
    #which python  >> ~/.bin/wpm/log 
    /C/Python27/python -c "print '/C/Python27'" >> ~/.bin/wpm/log
    echo $?
}

function setup() {
    echo "echo 'Please try installing Python in C:\\Python27\\'"
    echo "msiexec -i $O_FILE"

    # Check default directory
    if [ -f /C/Python27/python.exe ] ; then 
        echo "PATH=\$PATH:/C/Python27" >> $HOME/.bashrc
        PATH=$PATH:/C/Python27
        export PATH
    fi
}

case "$1" in 
    "bintype" )
        echo $BINTYP;;
    "binurl" )
        echo $BINURL;;
    "o_file" )
        echo $O_FILE;;
    "md5" ) 
        echo $MD5;;
    "depend" )
        echo ${DEPEND[@]};;
    "check_install" )
        check_install;;
    "setup_command" )
        setup ;;
esac
